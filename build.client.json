[
  {
    "name": "Delete dist folder",
    "kind": "RM",
    "path": "./static/dist"
  },
  {
    "name": "Delete local tmp results",
    "kind": "RM",
    "path": "./test/tmp"
  },
  {
    "name": "Delete local diff results",
    "kind": "RM",
    "path": "./test/diff"
  },
  {
    "name": "Delete compiled systems",
    "kind": "RM",
    "path": "./static/systems"
  },
  {
    "name": "Compile static-scene system",
    "kind": "Webpack",
    "file": "./packages/static-scene/*.ts",
    "target": "webworker"
  },
  {
    "name": "Compile communications system",
    "kind": "Webpack",
    "file": "./packages/communications/*.ts",
    "target": "webworker"
  },
  {
    "name": "Compile internal scenes",
    "kind": "Webpack",
    "file": "./packages/internal-scenes/*.ts",
    "target": "webworker"
  },
  {
    "name": "Compile preview & client",
    "kind": "Webpack",
    "file": "./packages/entryPoints/*.ts",
    "target": "web"
  },
  {
    "name": "Compile test scenes",
    "kind": "Webpack",
    "file": "./public/test-parcels/*/scene.tsx",
    "target": "webworker"
  },
  {
    "name": "Compile tests",
    "kind": "Webpack",
    "file": "./test/index.ts",
    "target": "web",
    "coverage": true
  }
]
